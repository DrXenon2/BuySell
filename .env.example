# =============================================
# ENVIRONNEMENT ET SERVEUR
# =============================================
NODE_ENV=development
PORT=3001
HOST=localhost
BASE_URL=http://localhost:3001
TRUST_PROXY=false
CLUSTER_MODE=false

# =============================================
# APPLICATION
# =============================================
APP_NAME=BuySell Platform
APP_VERSION=1.0.0
APP_DESCRIPTION=Marketplace Backend API
APP_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001
