{
  "name": "buy-sell-platform-backend",
  "version": "1.0.0",
  "description": "Backend API for Buy-Sell E-commerce Platform with Supabase",
  "main": "src/index.js",
  "type": "commonjs",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "dev:debug": "nodemon --inspect src/index.js",
    "dev:cluster": "NODE_ENV=development node server.js",
    "prod": "NODE_ENV=production node src/index.js",
    "prod:cluster": "NODE_ENV=production node server.js",
    "test": "jest --verbose --coverage",
    "test:watch": "jest --watch",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/**/*.js",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed_database.js",
    "db:backup": "node scripts/backup_database.js",
    "jobs:start": "node src/jobs/index.js",
    "build:docker": "docker build -t buy-sell-platform .",
    "docker:dev": "docker-compose up --build",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up --build",
    "healthcheck": "node scripts/healthcheck.js",
    "docs:generate": "node scripts/generate-swagger-json.js",
    "docs:serve": "npm run dev",
    "docs:export": "node scripts/export-swagger.js",
    "docs:validate": "npx swagger-cli validate src/docs/swagger.json",
    "docs:health": "node -e \"require('./src/docs/healthcheck').checkDocumentationHealth()\""
},
  "keywords": [
    "ecommerce",
    "api",
    "supabase",
    "express",
    "nodejs",
    "postgresql",
    "stripe",
    "redis",
    "swagger",
    "openapi",
    "documentation"
  ],
  "author": "Buy-Sell Platform Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "express-rate-limit": "^7.1.5",
    "express-mongo-sanitize": "^2.2.0",
    "hpp": "^0.2.3",
    "xss-clean": "^0.1.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "express-basic-auth": "^1.2.1",
    
    "@supabase/supabase-js": "^2.38.0",
    "@supabase/realtime-js": "^2.8.2",
    "@supabase/storage-js": "^2.5.0",
    
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "validator": "^13.11.0",
    
    "stripe": "^14.5.0",
    "resend": "^2.0.0",
    
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.6",
    "uuid": "^9.0.1",
    
    "node-cron": "^3.0.3",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    
    "redis": "^4.6.10",
    "ioredis": "^5.3.2",
    
    "axios": "^1.6.2",
    "node-fetch": "^3.3.2",
    
    "joi": "^17.11.0",
    "express-validator": "^7.0.1",
    
    "moment": "^2.29.4",
    "date-fns": "^2.30.0",
    
    "lodash": "^4.17.21",
    "ramda": "^0.29.1"
  },
  "devDependencies": {
    "nodemon": "^3.1.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.0",
    "prettier": "^3.1.1",
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "babel-jest": "^29.7.0",
    "swagger-cli": "^4.0.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/buy-sell-platform.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/buy-sell-platform/issues"
  },
  "homepage": "https://github.com/your-username/buy-sell-platform#readme",
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/tests/**",
      "!src/**/*.test.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "setupFilesAfterEnv": [
      "./src/tests/setup.js"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 100,
    "tabWidth": 2
  }
}
