# =============================================
# ENVIRONNEMENT ET SERVEUR
# =============================================
NODE_ENV=development
PORT=3001
HOST=localhost
BASE_URL=http://localhost:3001
TRUST_PROXY=false
CLUSTER_MODE=false

# =============================================
# APPLICATION
# =============================================
APP_NAME=BuySell Platform
APP_VERSION=1.0.0
APP_DESCRIPTION=Marketplace Backend API
APP_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000
SUPPORT_EMAIL=support@buysell.com
CONTACT_EMAIL=contact@buysell.com

# =============================================
# SUPABASE (Base de données)
# =============================================
SUPABASE_URL=https://votre-project-id.supabase.co
SUPABASE_ANON_KEY=votre-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=votre-supabase-service-role-key
DATABASE_URL=postgresql://postgres:[votre-mot-de-passe]@db.[votre-project-id].supabase.co:5432/postgres
SUPABASE_SCHEMA=public

# =============================================
# AUTHENTIFICATION JWT
# =============================================
JWT_SECRET=votre-super-secret-jwt-tres-long-et-securise-minimum-32-caracteres
JWT_ALGORITHM=HS256
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d
JWT_ISSUER=buysell-platform
JWT_AUDIENCE=buysell-users
BCRYPT_ROUNDS=12

# =============================================
# STRIPE (Paiements)
# =============================================
STRIPE_SECRET_KEY=sk_test_votre-cle-secrete-stripe
STRIPE_PUBLISHABLE_KEY=pk_test_votre-cle-publique-stripe
STRIPE_WEBHOOK_SECRET=whsec_votre-webhook-secret-stripe
STRIPE_SUCCESS_URL=http://localhost:3000/checkout/success
STRIPE_CANCEL_URL=http://localhost:3000/checkout/cancel
STRIPE_API_VERSION=2023-10-16

# =============================================
# CLOUDINARY (Images)
# =============================================
CLOUDINARY_CLOUD_NAME=votre-cloud-name
CLOUDINARY_API_KEY=votre-api-key
CLOUDINARY_API_SECRET=votre-api-secret
CLOUDINARY_FOLDER=buysell-platform
CLOUDINARY_SECURE=true

# =============================================
# EMAIL (Resend)
# =============================================
EMAIL_PROVIDER=resend
EMAIL_FROM=noreply@buysell.com
RESEND_API_KEY=re_votre-cle-api-resend

# =============================================
# AWS Services
# =============================================
AWS_ACCESS_KEY_ID=votre-access-key-id
AWS_SECRET_ACCESS_KEY=votre-secret-access-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=votre-bucket-s3
AWS_S3_REGION=us-east-1
AWS_S3_ACL=public-read
AWS_SES_FROM_EMAIL=noreply@buysell.com
AWS_SES_REGION=us-east-1

# =============================================
# UPLOAD ET STOCKAGE
# =============================================
MAX_FILE_SIZE=5242880
UPLOAD_DIR=uploads
TEMP_DIR=temp

# =============================================
# REDIS (Cache et Sessions)
# =============================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=buysell:

# =============================================
# RATE LIMITING
# =============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
RATE_LIMIT_SKIP_SUCCESSFUL=false

# =============================================
# CORS
# =============================================
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_MAX_AGE=86400

# =============================================
# LOGGING
# =============================================
LOG_LEVEL=info
LOG_DIR=logs
LOG_MAX_FILES=30d
LOG_MAX_SIZE=100m
LOG_FORMAT=json

# =============================================
# MONITORING ET ANALYTICS
# =============================================
MONITORING_ENABLED=false
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=
HEALTH_CHECK_INTERVAL=30000

# =============================================
# CACHE
# =============================================
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_PREFIX=buysell:cache:

# =============================================
# FONCTIONNALITÉS
# =============================================
REQUIRE_EMAIL_VERIFICATION=true
ENABLE_2FA=false
ENABLE_SOCIAL_LOGIN=false
ENABLE_ANALYTICS=true
ENABLE_REALTIME_NOTIFICATIONS=true
ENABLE_PRODUCT_REVIEWS=true
ENABLE_SELLER_DASHBOARD=true
ENABLE_ADMIN_PANEL=true

# =============================================
# SÉCURITÉ
# =============================================
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_TIME=900000
PASSWORD_MIN_LENGTH=8
REQUIRE_STRONG_PASSWORD=true
SESSION_TIMEOUT=86400000

# =============================================
# RÈGLES MÉTIER
# =============================================
COMMISSION_RATE=0.05
TAX_RATE=0.18
FREE_SHIPPING_THRESHOLD=50000
MAX_CART_ITEMS=50
MAX_ORDER_ITEMS=100
LOW_STOCK_THRESHOLD=10
CRITICAL_STOCK_THRESHOLD=3

# =============================================
# APIS EXTERNES
# =============================================
GOOGLE_MAPS_API_KEY=
SENDGRID_API_KEY=
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# =============================================
# JOBS ET TÂCHES PLANIFIÉES
# =============================================
CLEANUP_INTERVAL=0 2 * * *
BACKUP_INTERVAL=0 3 * * 0
ANALYTICS_INTERVAL=0 1 * * *
EMAIL_QUEUE_INTERVAL=*/5 * * * *
