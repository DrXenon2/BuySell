{
  "dashboard": {
    "id": null,
    "title": "Business Metrics",
    "tags": ["business", "revenue", "orders"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Total Revenue",
        "type": "stat",
        "gridPos": {"h": 6, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum(app_revenue_total)",
            "legendFormat": "Total Revenue",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD"
          }
        }
      },
      {
        "id": 2,
        "title": "Orders Today",
        "type": "stat",
        "gridPos": {"h": 6, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "sum(increase(app_orders_total[24h]))",
            "legendFormat": "Orders Today",
            "refId": "A"
          }
        ]
      },
      {
        "id": 3,
        "title": "Active Products",
        "type": "stat",
        "gridPos": {"h": 6, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "app_products_total{status=\"active\"}",
            "legendFormat": "Active Products",
            "refId": "A"
          }
        ]
      },
      {
        "id": 4,
        "title": "Registered Users",
        "type": "stat",
        "gridPos": {"h": 6, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "app_users_total{type=\"customer\"}",
            "legendFormat": "Registered Users",
            "refId": "A"
          }
        ]
      },
      {
        "id": 5,
        "title": "Revenue Over Time",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 6},
        "targets": [
          {
            "expr": "sum(rate(app_revenue_total[1h]))",
            "legendFormat": "Revenue/Hour",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD"
          }
        }
      },
      {
        "id": 6,
        "title": "Orders Over Time",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 6},
        "targets": [
          {
            "expr": "rate(app_orders_total[1h])",
            "legendFormat": "Orders/Hour",
            "refId": "A"
          }
        ]
      },
      {
        "id": 7,
        "title": "Orders by Status",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 14},
        "targets": [
          {
            "expr": "sum by (status) (app_orders_total)",
            "legendFormat": "{{status}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 8,
        "title": "Payment Methods Distribution",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 14},
        "targets": [
          {
            "expr": "sum by (payment_method) (app_orders_total)",
            "legendFormat": "{{payment_method}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 9,
        "title": "Cart Operations",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 22},
        "targets": [
          {
            "expr": "rate(app_cart_operations_total{operation=\"add\"}[1h])",
            "legendFormat": "Add to Cart",
            "refId": "A"
          },
          {
            "expr": "rate(app_cart_operations_total{operation=\"remove\"}[1h])",
            "legendFormat": "Remove from Cart",
            "refId": "B"
          }
        ]
      },
      {
        "id": 10,
        "title": "Payment Success Rate",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 22},
        "targets": [
          {
            "expr": "rate(app_payment_transactions_total{status=\"success\"}[1h]) / rate(app_payment_transactions_total[1h]) * 100",
            "legendFormat": "Success Rate",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent"
          }
        }
      },
      {
        "id": 11,
        "title": "Product Stock Levels",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 30},
        "targets": [
          {
            "expr": "app_product_stock",
            "legendFormat": "{{product_name}} ({{category}})",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "none",
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 10},
                {"color": "green", "value": 20}
              ]
            }
          }
        }
      },
      {
        "id": 12,
        "title": "Search Query Analytics",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 30},
        "targets": [
          {
            "expr": "rate(app_search_queries_total[1h])",
            "legendFormat": "Search Queries/Hour",
            "refId": "A"
          }
        ]
      },
      {
        "id": 13,
        "title": "Top Selling Categories",
        "type": "bargauge",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 38},
        "targets": [
          {
            "expr": "topk(10, sum by (category) (app_orders_total))",
            "legendFormat": "{{category}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 14,
        "title": "User Registration Rate",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 38},
        "targets": [
          {
            "expr": "rate(app_users_total[1h])",
            "legendFormat": "Registrations/Hour",
            "refId": "A"
          }
        ]
      }
    ],
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "refresh": "1m"
  }
}
